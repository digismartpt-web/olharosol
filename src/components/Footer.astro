---
import { restaurantConfig } from '../data/config.js';
const currentYear = new Date().getFullYear();
---

<!-- Minimal Footer - Lilia Style -->
<footer class="bg-neutral-900 text-white py-20 md:py-32">
  <div class="container mx-auto px-8 max-w-5xl">
    
    <!-- Main Footer Content -->
    <div class="grid md:grid-cols-3 gap-12 md:gap-16 text-center md:text-left">
      
      <!-- Brand -->
      <div>
        <h3 class="text-3xl font-serif font-light mb-4">{restaurantConfig.name}</h3>
        <p class="text-gray-400 text-sm uppercase tracking-wider">{restaurantConfig.tagline}</p>
      </div>
      
      <!-- Hours -->
      <div>
        <h4 class="text-sm uppercase tracking-[0.2em] text-gray-400 mb-6">Horário</h4>
        <div class="space-y-2 text-gray-300">
          <p>Seg - Ter: {restaurantConfig.hours.segunda_terca}</p>
          <p>Qua - Qui: {restaurantConfig.hours.quarta_quinta}</p>
          <p>Sex - Sáb: {restaurantConfig.hours.sexta_sabado}</p>
          <p>Dom: {restaurantConfig.hours.domingo}</p>
        </div>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="text-sm uppercase tracking-[0.2em] text-gray-400 mb-6">Contacto</h4>
        <div class="space-y-3 text-gray-300">
          <p>
            <a href={`tel:${restaurantConfig.contact.phone.replace(/\s/g, '')}`} class="hover:text-gold transition-colors">
              {restaurantConfig.contact.phone}
            </a>
          </p>
          <p>
            <a 
              href={restaurantConfig.address.googleMapsLink} 
              target="_blank" 
              rel="noopener noreferrer"
              class="hover:text-gold transition-colors"
            >
              {restaurantConfig.address.street}<br />
              {restaurantConfig.address.postalCode} {restaurantConfig.address.city}
            </a>
          </p>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-gray-800 flex flex-col md:flex-row justify-between items-center gap-6">
      
      <!-- Social Links -->
      <div class="flex gap-6">
        <a href={restaurantConfig.contact.instagram} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.791-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.209-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
        </a>
        <a href={restaurantConfig.contact.facebook} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
        </a>
      </div>
      
      <!-- Copyright -->
      <p class="text-sm text-gray-500">
        &copy; {currentYear} {restaurantConfig.name}
      </p>
      
      <!-- Credits -->
      <a href="https://digismartai.netlify.app/" target="_blank" rel="noopener noreferrer" class="opacity-80 hover:opacity-100 transition-opacity">
        <img src="/images/logo-ds.png" alt="Digismart AI" class="h-8 md:h-10 w-auto" />
      </a>
    </div>
  </div>
</footer>
