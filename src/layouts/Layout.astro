---
import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/600.css';
import '@fontsource/playfair-display/700.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import lazysizes from node_modules
import 'lazysizes/lazysizes.min.js';

import { restaurantConfig } from '../data/config.js';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  canonicalURL?: string;
  heroImage?: string;
}

const { 
  title, 
  description = restaurantConfig.description,
  image = restaurantConfig.images.cover,
  type = "website",
  canonicalURL = "https://votre-site.com",
  heroImage
} = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "Restaurant",
  "name": restaurantConfig.name,
  "description": restaurantConfig.description,
  "url": "http://localhost:4321",
  "telephone": [restaurantConfig.contact.phone],
  "openingHours": [
    "We-Th 11:00-15:00", 
    "We-Th 18:00-23:00", 
    "Fr-Sa 11:00-00:00", 
    "Su 18:00-23:00"
  ],
  "address": {
    "@type": "PostalAddress",
    "streetAddress": restaurantConfig.address.street,
    "addressLocality": restaurantConfig.address.city,
    "postalCode": restaurantConfig.address.postalCode,
    "addressCountry": "PT"
  }
};
---

<!doctype html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title} | {restaurantConfig.tagline}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:locale" content="pt_PT" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    
    <!-- Preload critical assets -->
    {heroImage && <link rel="preload" href={heroImage} as="image" fetchpriority="high" />}
    <link rel="preconnect" href="https://stackblitz.com" />
    
    <!-- Alternative languages -->
    <link rel="alternate" hreflang="pt" href="http://localhost:4321" />
    
    <!-- PWA meta tags -->
    <meta name="theme-color" content="#8AB77B" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Additional SEO meta tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content={restaurantConfig.seo.author} />
    <meta name="keywords" content={restaurantConfig.seo.keywords} />
  </head>
  <body class="min-h-screen flex flex-col bg-white text-neutral-900">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    
    <!-- Developer Badge -->
    <div class="fixed bottom-0 right-8 z-[100] bg-black text-white px-5 py-3 text-xs uppercase tracking-wider font-medium rounded-t-lg shadow-2xl border-t border-x border-white/10 flex items-center gap-3">
      Developed for free by 
      <a href="https://digismartai.netlify.app/" target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
        <img src="/images/logo-ds.png" alt="Digismart AI" class="h-6 w-auto" />
      </a>
    </div>
    <script>
      // Initialize lazysizes
      document.addEventListener('lazybeforeunveil', function(e) {
        var bg = e.target.getAttribute('data-bg');
        if (bg) {
          e.target.style.backgroundImage = 'url(' + bg + ')';
        }
      });
    </script>
    
    <script>
      // Lenis Smooth Scroll - Import dynamically for client-side
      import Lenis from 'lenis';
      
      const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
        orientation: 'vertical',
        gestureOrientation: 'vertical',
        smoothWheel: true,
      });

      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }
      requestAnimationFrame(raf);
    </script>
    
    <script>
      // GSAP ScrollTrigger Animations
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';
      
      gsap.registerPlugin(ScrollTrigger);
      
      // Animate all elements with .reveal class
      document.addEventListener('DOMContentLoaded', () => {
        const revealElements = document.querySelectorAll('.reveal');
        
        revealElements.forEach((el) => {
          gsap.fromTo(el, 
            { 
              y: 50, 
              autoAlpha: 0 
            },
            {
              y: 0,
              autoAlpha: 1,
              duration: 0.8,
              ease: 'power2.out',
              scrollTrigger: {
                trigger: el,
                start: 'top 85%',
                end: 'bottom 15%',
                toggleActions: 'play none none reverse'
              }
            }
          );
        });
      });
    </script>
  </body>
</html>