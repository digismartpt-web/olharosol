<script>
  // Gallery Logic: Filter + Pagination
  const filterButtons = document.querySelectorAll('[data-filter]');
  const galleryItems = Array.from(document.querySelectorAll('.gallery-item')) as HTMLElement[];
  const btnPrev = document.getElementById('gallery-prev') as HTMLButtonElement;
  const btnNext = document.getElementById('gallery-next') as HTMLButtonElement;
  const pageIndicator = document.getElementById('gallery-page-indicator');
  const paginationContainer = document.getElementById('gallery-pagination');

  let currentFilter = 'Todos';
  let currentPage = 1;
  const itemsPerPage = 6;

  function updateGallery() {
    // 1. Filter items
    const filteredItems = galleryItems.filter(item => 
      currentFilter === 'Todos' || item.dataset.category === currentFilter
    );

    // 2. Pagination calc
    const totalPages = Math.ceil(filteredItems.length / itemsPerPage) || 1;
    if (currentPage > totalPages) currentPage = totalPages;

    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;

    // 3. Show/Hide items
    galleryItems.forEach(item => item.style.display = 'none');
    filteredItems.forEach((item, index) => {
      if (index >= start && index < end) {
        item.style.display = 'block';
      }
    });

    // 4. Update UI
    if (pageIndicator) pageIndicator.textContent = `P√°gina ${currentPage} de ${totalPages}`;
    if (btnPrev) btnPrev.disabled = currentPage === 1;
    if (btnNext) btnNext.disabled = currentPage === totalPages;

    // Hide pagination if only 1 page
    if (paginationContainer) {
      paginationContainer.style.display = totalPages > 1 ? 'flex' : 'none';
    }
  }

  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      filterButtons.forEach(b => {
        b.classList.remove('bg-primary', 'text-white');
        b.classList.add('bg-white', 'text-gray-600');
      });
      btn.classList.remove('bg-white', 'text-gray-600');
      btn.classList.add('bg-primary', 'text-white');

      currentFilter = (btn as HTMLElement).dataset.filter;
      currentPage = 1;
      updateGallery();
    });
  });

  btnPrev?.addEventListener('click', () => {
    if (currentPage > 1) {
      currentPage--;
      updateGallery();
      document.getElementById('galeria').scrollIntoView({ behavior: 'smooth' });
    }
  });

  btnNext?.addEventListener('click', () => {
    const filteredCount = galleryItems.filter(item => 
      currentFilter === 'Todos' || item.dataset.category === currentFilter
    ).length;
    const totalPages = Math.ceil(filteredCount / itemsPerPage);
    
    if (currentPage < totalPages) {
      currentPage++;
      updateGallery();
      document.getElementById('galeria').scrollIntoView({ behavior: 'smooth' });
    }
  });

  // Initial call
  updateGallery();
</script>
